<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostDetailActivity">

        <TextView
            android:id="@+id/tv_profilename"
            android:layout_width="377dp"
            android:layout_height="74dp"
            android:text="이름"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.481" />

        <TextView
            android:id="@+id/tv_profiledetail1"
            android:layout_width="240dp"
            android:layout_height="27dp"
            android:text="언어"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profilename"
            app:layout_constraintVertical_bias="0.27" />

        <TextView
            android:id="@+id/tv_profiledetail2"
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:text="성별"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profilename"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_profiledetail3"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:text="나라"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.905"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profilename"
            app:layout_constraintVertical_bias="0.074" />



        <TextView
            android:id="@+id/tv_profiledetail5"
            android:layout_width="346dp"
            android:layout_height="137dp"
            android:text="하고픈말"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profilename"
            app:layout_constraintVertical_bias="0.474" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="346dp"
            android:layout_height="25dp"
            android:text="결제금액"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profiledetail5"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="290dp"
            android:layout_height="286dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.067"
            app:srcCompat="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/bt_pay1"
            android:layout_width="162sp"
            android:layout_height="51sp"
            android:text="pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.927" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
